{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Article",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "doi": {
      "type": "string"
    },
    "revision": {
      "type": "integer",
      "required": true,
      "min": 1,
      "default": 1
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "content.image-text",
        "content.video"
      ]
    },
    "subtitle": {
      "type": "string"
    },
    "summary": {
      "type": "text"
    },
    "keywords": {
      "type": "component",
      "repeatable": true,
      "component": "article.keyword"
    },
    "authors": {
      "type": "component",
      "repeatable": true,
      "component": "article.authors3"
    },
    "references": {
      "collection": "source"
    }
  }
}
